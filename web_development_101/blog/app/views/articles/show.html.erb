<% if logged_in? %>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>

<p><%= image_tag @article.image.url %></p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<h3>Comments</h3>
<%= render partial: "comment", collection: @article.comments %>

<%= render partial: 'comments/form' %>

<%= link_to "Go Back", articles_path() %>

<% end %>